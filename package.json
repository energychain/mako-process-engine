{
  "name": "mako-process-definitions",
  "version": "0.1.0",
  "description": "Machine-readable MaKo (GPKE, WiM, GeLi Gas, MaBiS) process definitions with tooling for energy market messaging.",
  "keywords": [
    "mako",
    "gpke",
    "wim",
    "geligas",
    "energy-market",
    "edifact",
    "process-definitions"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/energychain/mako-process-definitions.git"
  },
  "homepage": "https://github.com/energychain/mako-process-definitions#readme",
  "bugs": {
    "url": "https://github.com/energychain/mako-process-definitions/issues"
  },
  "license": "MIT",
  "author": "STROMDAO GmbH <info@stromdao.de>",
  "type": "commonjs",
  "main": "src/index.js",
  "exports": {
    ".": "./src/index.js",
    "./integrations/transformer": "./src/integrations/transformer-plugin.js",
    "./integrations/router": "./src/integrations/router-plugin.js",
    "./core": "./src/core/loader.js",
    "./definitions": "./definitions"
  },
  "files": [
    "LICENSE",
    "README.md",
    "README.en.md",
    "src",
    "definitions",
    "docs",
    "examples"
  ],
  "scripts": {
    "build": "node ./scripts/update-schemas.js",
    "lint": "eslint . --ext js --max-warnings=0",
    "test": "jest",
    "test:watch": "jest --watch",
    "definitions:validate": "node ./scripts/validate-all.js",
    "definitions:generate": "node ./scripts/generate-from-willi.js",
    "definitions:sanitize": "node ./scripts/sanitize-existing-definitions.js",
    "prepublishOnly": "npm run lint && npm run test && npm run definitions:validate"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^2.1.1",
    "dotenv": "^16.4.5",
    "graphlib": "^2.1.8",
    "js-yaml": "^4.1.0",
    "willi-mako-client": "^0.4.0",
    "edifact-json-transformer": "^1.0.1",
    "mako-message-router": "^0.1.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.2.0",
    "jest": "^29.7.0"
  }
}
